#!/bin/bash
# File: apiAutomation-0x00
# Purpose: Fetch data for a Pokémon (Pikachu) from the PokeAPI and handle errors

# 1️⃣ Define variables for reuse
POKEMON="pikachu"
URL="https://pokeapi.co/api/v2/pokemon/$POKEMON"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# 2️⃣ Make the API request
# -s → silent mode
# -w "%{http_code}" → show the HTTP status code at the end
# -o data.json → save the JSON response to data.json
HTTP_STATUS=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$URL")

# 3️⃣ Check if it was successful
if [ "$HTTP_STATUS" -eq 200 ]; then
    echo "✅ Successfully fetched data for $POKEMON"
else
    # If not successful, log the error with timestamp
    echo "$(date): ❌ Error fetching $POKEMON (Status: $HTTP_STATUS)" | tee -a "$ERROR_FILE"
    
    # Delete the possibly incomplete file
    rm -f "$OUTPUT_FILE"
fi

